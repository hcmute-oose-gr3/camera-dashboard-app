{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsxImportSource": "solid-js",
		"jsx": "preserve",
		"strict": true,
		"types": ["solid-start/env"],
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
	}
}
